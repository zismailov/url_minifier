<% if flash[:notice] %>
  <div class="alert alert-dismissible alert-notice">
    <button class="close" data-dismiss="alert" type="button">&times;</button>
    <p><%= flash[:notice] %></p>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="alert alert-dismissible alert-alert">
    <button class="close" data-dismiss="alert" type="button">&times;</button>
    <p><%= flash[:alert] %></p>
  </div>
<% end %>
