<div class="login-form">
  <h2 class="text-center">Login</h2>
  <%= form_tag  user_sessions_path , :method => :post do %>
    <div class="form-group">
        <%= text_field_tag :email, nil, class: "form-control", placeholder: "Email", required: "required" %>
    </div>
    <div class="form-group">
        <%= password_field_tag :password, nil, class: "form-control", placeholder: "Password", required: "required" %>
    </div>
    <div class="form-group">
        <%= submit_tag "Login", class: "btn btn-primary btn-block" %>
    </div>
  <% end %>
  <p class="text-center"><%= link_to "Create an Account", new_user_path %></p>
</div>
